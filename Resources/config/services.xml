<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mf.securityawarejsruntime.contributions.service_definitions_provider"
                 class="Modera\SecurityAwareJSRuntimeBundle\Contributions\ServiceDefinitionsProvider">

            <argument type="service" id="service_container" />

            <tag name="mf.jsruntimeintegration.csdi.service_definitions_provider" />
        </service>

        <service id="mf.jsruntimeintegration.contributions.class_loader_mappings_provider"
                 class="Modera\SecurityAwareJSRuntimeBundle\Contributions\ClassLoaderMappingsProvider">

            <tag name="mf.jsruntimeintegration.class_loader_mappings_provider" />
        </service>

        <service id="modera_security_aware_js_runtime.contributions.config_mergers_provider"
                 class="Modera\SecurityAwareJSRuntimeBundle\Contributions\ConfigMergersProvider">

            <argument type="service" id="security.context" />

            <tag name="mf.jsruntimeintegration.config.config_mergers_provider" />
        </service>
    </services>
</container>
