<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mf.jsruntimeintegration.menu.menu_manager"
                 class="Modera\JSRuntimeIntegrationBundle\Menu\MenuManager">

            <argument type="service" id="mf.jsruntimeintegration.menu.menu_items_provider" />
        </service>

        <service id="mf.jsruntimeintegrationbundle.contributions.config.standard_config_provider"
                 class="Modera\JSRuntimeIntegrationBundle\Contributions\Config\StandardConfigMergersProvider">

            <argument type="service" id="service_container" />

            <tag name="mf.jsruntimeintegration.config.config_mergers_provider" />
        </service>

        <service id="mf.jsruntimeintegrationbundle.csdi.service_definitions_manager"
                 class="Modera\JSRuntimeIntegrationBundle\ClientSideDependencyInjection\ServiceDefinitionsManager">

            <argument type="service" id="mf.jsruntimeintegration.csdi.service_definitions_provider" />
        </service>

        <service id="mf.jsruntimeintegrationbundle.contributions.service_definitions_provider"
                 class="Modera\JSRuntimeIntegrationBundle\Contributions\ServiceDefinitionsProvider">

            <argument type="service" id="service_container" />

            <tag name="mf.jsruntimeintegration.csdi.service_definitions_provider" />
        </service>

        <service id="mf.jsruntimeintegration.config.config_manager"
                 class="Modera\JSRuntimeIntegrationBundle\Config\ConfigManager">

            <argument type="service" id="mf.jsruntimeintegration.config.config_mergers_provider" />
        </service>

        <service id="mf.jsruntimeintegration.contributions.js_resources_provider"
                 class="Modera\JSRuntimeIntegrationBundle\Contributions\JsResourcesProvider">

            <argument type="service" id="service_container" />

            <tag name="mf.jsruntimeintegration.js_resources_provider" />
        </service>

        <service id="mf.jsruntimeintegration.contributions.css_resources_provider"
                 class="Modera\JSRuntimeIntegrationBundle\Contributions\CssResourcesProvider">

            <tag name="mf.jsruntimeintegration.css_resources_provider" />
        </service>

        <service id="jsruntimeintegration.contributions.routing_resources_provider"
                 class="Modera\JSRuntimeIntegrationBundle\Contributions\RoutingResourcesProvider">

            <tag name="modera_routing.routing_resources_provider" />
        </service>
    </services>
</container>
