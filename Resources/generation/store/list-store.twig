Ext.define('{{ class_name }}', {
    extend: 'Ext.data.DirectStore',

    // override
    constructor: function() {
        this.config = {
            fields: [
{% for field in fields %}
                { name: '{{ field.name }}', type: '{{ field.type }}' },
{% endfor %}
            ],
            proxy: {
                type: 'direct',
                directFn: {{ direct_action_name }},
                extraParams: {
                    _hydration_profile: 'list',
                    _model_id: '{{ model_id }}'
                }
            },
            autoLoad: true
        };
        this.callParent([this.config]);
    }
});